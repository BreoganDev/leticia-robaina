{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "defaultPalette": false,
            "defaultGradients": false,
            "palette": [
                {
                    "color": "#b8860b",
                    "name": "Dorado Principal",
                    "slug": "primary"
                },
                {
                    "color": "#2c3e50",
                    "name": "Azul Oscuro",
                    "slug": "secondary"
                },
                {
                    "color": "#333333",
                    "name": "Gris Oscuro",
                    "slug": "text"
                },
                {
                    "color": "#f8f9fa",
                    "name": "Gris Claro",
                    "slug": "light-bg"
                },
                {
                    "color": "#ffffff",
                    "name": "Blanco",
                    "slug": "white"
                },
                {
                    "color": "#d4af37",
                    "name": "Dorado Claro",
                    "slug": "accent"
                }
            ],
            "gradients": [
                {
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--accent) 100%)",
                    "name": "Degradado Dorado",
                    "slug": "primary-gradient"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Playfair Display', Georgia, serif",
                    "name": "Playfair Display",
                    "slug": "playfair-display"
                },
                {
                    "fontFamily": "'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "Poppins",
                    "slug": "poppins"
                }
            ],
            "fontSizes": [
                {
                    "size": "14px",
                    "slug": "small"
                },
                {
                    "size": "16px",
                    "slug": "medium"
                },
                {
                    "size": "18px",
                    "slug": "large"
                },
                {
                    "size": "24px",
                    "slug": "x-large"
                },
                {
                    "size": "32px",
                    "slug": "xx-large"
                },
                {
                    "size": "48px",
                    "slug": "huge"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"],
            "spacingScale": {
                "steps": 1
            },
            "spacingSizes": [
                {
                    "size": "0.5rem",
                    "slug": "10",
                    "name": "Pequeño"
                },
                {
                    "size": "1rem",
                    "slug": "20",
                    "name": "Mediano"
                },
                {
                    "size": "1.5rem",
                    "slug": "30",
                    "name": "Grande"
                },
                {
                    "size": "2rem",
                    "slug": "40",
                    "name": "Extra Grande"
                },
                {
                    "size": "3rem",
                    "slug": "50",
                    "name": "Enorme"
                }
            ]
        },
        "border": {
            "radius": true,
            "color": true,
            "style": true,
            "width": true
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--text)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--poppins)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(2rem, 5vw, 3.5rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(1.75rem, 4vw, 2.5rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(1.5rem, 3vw, 2rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(1.25rem, 2.5vw, 1.5rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(1.125rem, 2vw, 1.25rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontSize": "clamp(1rem, 1.5vw, 1.125rem)",
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "8px"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)"
                    }
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "color": {
                    "text": "#666666"
                },
                "typography": {
                    "lineHeight": "1.7"
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": {
                        "bottom": "1rem"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Cabecera",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Pie de página",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "template-home",
            "title": "Página de Inicio",
            "postTypes": ["page"]
        },
        {
            "name": "template-sobre-mi",
            "title": "Sobre Mí",
            "postTypes": ["page"]
        },
        {
            "name": "template-servicios",
            "title": "Servicios",
            "postTypes": ["page"]
        },
        {
            "name": "template-talleres",
            "title": "Talleres",
            "postTypes": ["page"]
        },
        {
            "name": "template-test-de-estilo",
            "title": "Test de Estilo",
            "postTypes": ["page"]
        },
        {
            "name": "template-contacto",
            "title": "Contacto",
            "postTypes": ["page"]
        }
    ]
}